@using e_business;
@{
    ViewData["Title"] = "Employee - Index";
}
@model IEnumerable<Employee>
<div class="container">
    <a class="btn btn-primary my-3" asp-action="Create">Create</a>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Image</th>
                <th>InstagramUrl</th>
                <th>FacebookUrl</th>
                <th>TwitterUrl</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model ?? new List<Employee>())
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.ImageUrl</td>
                    <td>@item.InstagramUrl</td>
                    <td>@item.FacebookUrl</td>
                    <td>@item.TwitterUrl</td>
                    <td><a class="btn btn-info" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>